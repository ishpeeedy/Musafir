<% layout('layouts/boilerplate')%>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-lg-8">
      <div
        class="card shadow-lg"
        style="
          background: linear-gradient(
            135deg,
            var(--sage-green) 0%,
            var(--powder-blue) 100%
          );
        "
      >
        <div class="card-body p-5">
          <h1
            class="text-center mb-4"
            style="color: var(--dusty-rose); font-size: 2.5rem"
          >
            ‚úèÔ∏è Edit Campground
          </h1>
          <p class="text-center mb-4" style="color: var(--charcoal-brown)">
            Update your campground details
          </p>

          <form
            action="/campgrounds/<%=campground._id%>?_method=PUT"
            method="POST"
            novalidate
            class="validated-form"
            enctype="multipart/form-data"
          >
            <div class="mb-4">
              <label class="form-label" for="title">Campground Title</label>
              <input
                class="form-control"
                type="text"
                id="title"
                name="campground[title]"
                value="<%=campground.title %>"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-4">
              <label class="form-label" for="location">Location</label>
              <input
                class="form-control"
                type="text"
                id="location"
                name="campground[location]"
                value="<%=campground.location %>"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-4">
              <label class="form-label" for="price">Price per Night</label>
              <div class="input-group">
                <span
                  class="input-group-text"
                  id="price-label"
                  style="
                    background-color: var(--mustard-yellow);
                    border-color: var(--charcoal-brown);
                    color: var(--charcoal-brown);
                    font-weight: 600;
                  "
                  >‚Çπ</span
                >
                <input
                  type="number"
                  class="form-control"
                  id="price"
                  placeholder="500"
                  aria-label="price"
                  aria-describedby="price-label"
                  name="campground[price]"
                  value="<%=campground.price %>"
                  min="0"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
            </div>

            <div class="mb-4">
              <label class="form-label" for="description">Description</label>
              <textarea
                class="form-control"
                type="text"
                id="description"
                name="campground[description]"
                rows="5"
                required
              >
<%= campground.description%></textarea
              >
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-4">
              <label class="form-label" for="image">Add More Images</label>
              <div class="form-file custom-file">
                <input
                  type="file"
                  class="form-file-input"
                  id="image"
                  name="image"
                  multiple
                />
                <label class="form-file-label" for="image">
                  <span class="form-file-text custom-file-label"
                    >üì∏ Add more image(s)...</span
                  >
                  <span class="form-file-button">Browse</span>
                </label>
              </div>
            </div>

            <% if(campground.images.length > 0) { %>
            <div class="mb-4">
              <label class="form-label">Current Images (Check to Delete)</label>
              <div class="row">
                <% campground.images.forEach(function(img, i) { %>
                <div class="col-md-4 mb-3">
                  <div
                    class="card"
                    style="
                      border: 3px solid var(--charcoal-brown);
                      border-radius: 1rem;
                      overflow: hidden;
                    "
                  >
                    <img
                      src="<%=img.thumbnail %>"
                      class="card-img-top"
                      alt=""
                      style="height: 150px; object-fit: cover"
                    />
                    <div
                      class="card-body text-center p-2"
                      style="background-color: var(--dusty-rose)"
                    >
                      <div class="form-check">
                        <input
                          class="form-check-input"
                          type="checkbox"
                          id="image-<%=i%>"
                          name="deleteImages[]"
                          value="<%=img.filename%>"
                        />
                        <label
                          class="form-check-label"
                          for="image-<%=i%>"
                          style="color: var(--charcoal-brown); font-weight: 600"
                        >
                          Delete
                        </label>
                      </div>
                    </div>
                  </div>
                </div>
                <% })%>
              </div>
            </div>
            <% } %>

            <div class="d-grid gap-2">
              <button class="btn btn-info btn-lg">üíæ Update Campground</button>
              <a
                href="/campgrounds/<%= campground._id%>"
                class="btn btn-secondary"
                >Cancel</a
              >
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
