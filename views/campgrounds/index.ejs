<% layout('layouts/boilerplate')%>

<!-- Hero Section with Map -->
<div class="container mt-4">
  <div style="position: relative; margin-bottom: 2rem;">

    <div id="map" style="width: 100%; height: 500px"></div>
  </div>
</div>
    <div style="text-align: center; margin-bottom: 1.5rem;">
      <h1 style="color: var(--dusty-rose); font-size: 3rem; margin-bottom: 0.5rem;">Explore Campgrounds</h1>
      <p style="color: var(--charcoal-brown); font-size: 1.2rem;">Discover your next adventure</p>
    </div>
<div class="container mt-4">
  <!-- Search and Filter Section -->
  <div class="card mb-4" style="background-color: var(--ivory-white);">
    <div class="card-body p-4">
      <form action="/campgrounds" method="GET" class="row g-3">
        <!-- Search -->
        <div class="col-md-4">
          <label for="search" class="form-label">Search</label>
          <input 
            type="text" 
            class="form-control" 
            id="search" 
            name="search" 
            placeholder="Title, location, or description..."
            value="<%= filters.search || '' %>"
          >
        </div>
        
        <!-- Min Price -->
        <div class="col-md-2">
          <label for="minPrice" class="form-label">Min Price</label>
          <input 
            type="number" 
            class="form-control" 
            id="minPrice" 
            name="minPrice" 
            placeholder="‚Çπ0"
            value="<%= filters.minPrice || '' %>"
            min="0"
          >
        </div>
        
        <!-- Max Price -->
        <div class="col-md-2">
          <label for="maxPrice" class="form-label">Max Price</label>
          <input 
            type="number" 
            class="form-control" 
            id="maxPrice" 
            name="maxPrice" 
            placeholder="‚Çπ5000"
            value="<%= filters.maxPrice || '' %>"
            min="0"
          >
        </div>
        
        <!-- Sort -->
        <div class="col-md-3">
          <label for="sort" class="form-label">Sort By</label>
          <select class="form-select" id="sort" name="sort">
            <option value="newest" <%= filters.sort === 'newest' ? 'selected' : '' %>>Newest First</option>
            <option value="oldest" <%= filters.sort === 'oldest' ? 'selected' : '' %>>Oldest First</option>
            <option value="price-asc" <%= filters.sort === 'price-asc' ? 'selected' : '' %>>Price: Low to High</option>
            <option value="price-desc" <%= filters.sort === 'price-desc' ? 'selected' : '' %>>Price: High to Low</option>
          </select>
        </div>
        
        <!-- Buttons -->
        <div class="col-md-3 d-flex align-items-end gap-2">
          <button type="submit" class="btn " style="flex: 1;">Filter</button>
          <a href="/campgrounds" class="btn " style="flex: 1;">Clear</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Results Info and Add Button -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <p class="mb-0" style="color: var(--charcoal-brown); font-weight: 600; font-size: 1.1rem;">
        üìç Showing <%= campgrounds.length %> of <%= pagination.totalDocs %> campgrounds
      </p>
      <% if (filters.search) { %>
        <p class="mb-0" style="color: var(--dusty-rose); font-size: 0.95rem;">
          Search results for "<%= filters.search %>"
        </p>
      <% } %>
    </div>
    <a href="/campgrounds/new" class="btn  btn-lg">
      Add Campground
    </a>
  </div>

  <!-- Campgrounds List -->
  <% if (campgrounds.length === 0) { %>
    <div class="alert alert-info text-center p-5">
      <h3 style="color: var(--charcoal-brown);">No campgrounds found</h3>
      <p>Try adjusting your filters or <a href="/campgrounds" style="color: var(--dusty-rose); font-weight: 600;">clear all filters</a>.</p>
    </div>
  <% } else { %>
    <% for (let campground of campgrounds) { %>
      <div class="card mb-4 shadow campground-card" style="overflow: hidden;">
        <div class="row g-0 m-0" style="height: 280px;">
          <div class="col-md-4 p-0" style="height: 100%;">
            <% if(campground.images.length) { %>
              <img class="campground-img" alt="" src="<%= campground.images[0].url %>">
            <% } else { %>
              <img
                class="campground-img"
                alt=""
                src="https://res.cloudinary.com/dzwjyg2ai/image/upload/v1756312011/musafir/e9z56wsbx8tl1hon1vhm.jpg"
              >
            <% } %>
          </div>
          <div class="col-md-8" style="height: 100%;">
            <div class="card-body p-4" style="height: 100%; display: flex; flex-direction: column; justify-content: space-between;">
              <div>
                <h5 class="card-title" style="color: var(--dusty-rose); font-size: 1.8rem; margin-bottom: 1rem;">
                  <%= campground.title %>
                </h5>
                <p class="card-text" style="color: var(--charcoal-brown); line-height: 1.7;">
                  <%= campground.description.substring(0, 150) %><%= campground.description.length > 150 ? '...' : '' %>
                </p>
                <div class="d-flex align-items-center mb-3">
                  <span style="color: var(--charcoal-brown); margin-right: 1rem;">
                    üìç <%= campground.location %>
                  </span>
                </div>
              </div>
              <div class="d-flex justify-content-between align-items-center">
                <p class="mb-0">
                  <strong style="color: var(--sage-green); font-size: 1.5rem;">‚Çπ<%= campground.price %></strong>
                  <span style="color: var(--charcoal-brown);">/night</span>
                </p>
                <a class="btn " href="/campgrounds/<%= campground._id %>">View Details ‚Üí</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  <% } %>

  <!-- Pagination -->
  <% if (pagination.totalPages > 1) { %>
    <nav aria-label="Campgrounds pagination" class="mt-5">
      <ul class="pagination justify-content-center">
        <!-- Previous Button -->
        <li class="page-item <%= !pagination.hasPrevPage ? 'disabled' : '' %>">
          <% if (pagination.hasPrevPage) { %>
            <a class="page-link" href="?page=<%= pagination.prevPage %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">
              ‚Üê Previous
            </a>
          <% } else { %>
            <span class="page-link">‚Üê Previous</span>
          <% } %>
        </li>

        <!-- Page Numbers -->
        <% 
          const startPage = Math.max(1, pagination.page - 2);
          const endPage = Math.min(pagination.totalPages, pagination.page + 2);
        %>
        
        <% if (startPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=1<%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">1</a>
          </li>
          <% if (startPage > 2) { %>
            <li class="page-item disabled"><span class="page-link">...</span></li>
          <% } %>
        <% } %>

        <% for (let i = startPage; i <= endPage; i++) { %>
          <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">
              <%= i %>
            </a>
          </li>
        <% } %>

        <% if (endPage < pagination.totalPages) { %>
          <% if (endPage < pagination.totalPages - 1) { %>
            <li class="page-item disabled"><span class="page-link">...</span></li>
          <% } %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= pagination.totalPages %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">
              <%= pagination.totalPages %>
            </a>
          </li>
        <% } %>

        <!-- Next Button -->
        <li class="page-item <%= !pagination.hasNextPage ? 'disabled' : '' %>">
          <% if (pagination.hasNextPage) { %>
            <a class="page-link" href="?page=<%= pagination.nextPage %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">
              Next ‚Üí
            </a>
          <% } else { %>
            <span class="page-link">Next ‚Üí</span>
          <% } %>
        </li>
      </ul>
    </nav>
  <% } %>
</div>

