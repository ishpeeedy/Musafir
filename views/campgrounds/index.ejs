<% layout('layouts/boilerplate')%>
<div id="map" style="width: 100%; height: 500px"></div>
<div class="container mt-4">
  <h1>All Campgrounds</h1>
  
  <!-- Search and Filter Section -->
  <div class="card mb-4">
    <div class="card-body">
      <form action="/campgrounds" method="GET" class="row g-3">
        <!-- Search -->
        <div class="col-md-4">
          <label for="search" class="form-label">Search</label>
          <input 
            type="text" 
            class="form-control" 
            id="search" 
            name="search" 
            placeholder="Search by title, location, or description"
            value="<%= filters.search || '' %>"
          >
        </div>
        
        <!-- Min Price -->
        <div class="col-md-2">
          <label for="minPrice" class="form-label">Min Price</label>
          <input 
            type="number" 
            class="form-control" 
            id="minPrice" 
            name="minPrice" 
            placeholder="₹0"
            value="<%= filters.minPrice || '' %>"
            min="0"
          >
        </div>
        
        <!-- Max Price -->
        <div class="col-md-2">
          <label for="maxPrice" class="form-label">Max Price</label>
          <input 
            type="number" 
            class="form-control" 
            id="maxPrice" 
            name="maxPrice" 
            placeholder="₹5000"
            value="<%= filters.maxPrice || '' %>"
            min="0"
          >
        </div>
        
        <!-- Sort -->
        <div class="col-md-2">
          <label for="sort" class="form-label">Sort By</label>
          <select class="form-select" id="sort" name="sort">
            <option value="newest" <%= filters.sort === 'newest' ? 'selected' : '' %>>Newest First</option>
            <option value="oldest" <%= filters.sort === 'oldest' ? 'selected' : '' %>>Oldest First</option>
            <option value="price-asc" <%= filters.sort === 'price-asc' ? 'selected' : '' %>>Price: Low to High</option>
            <option value="price-desc" <%= filters.sort === 'price-desc' ? 'selected' : '' %>>Price: High to Low</option>
          </select>
        </div>
        
        <!-- Buttons -->
        <div class="col-md-2 d-flex align-items-end">
          <button type="submit" class="btn btn-primary me-2">Filter</button>
          <a href="/campgrounds" class="btn btn-secondary">Clear</a>
        </div>
      </form>
    </div>
  </div>

  <!-- Results Info and Add Button -->
  <div class="d-flex justify-content-between align-items-center mb-3">
    <p class="text-muted mb-0">
      Showing <%= campgrounds.length %> of <%= pagination.totalDocs %> campgrounds
      <% if (filters.search) { %>
        - Search results for "<%= filters.search %>"
      <% } %>
    </p>
    <a href="/campgrounds/new" class="btn btn-success">Add Campground</a>
  </div>

  <!-- Campgrounds List -->
  <% if (campgrounds.length === 0) { %>
    <div class="alert alert-info">
      No campgrounds found. Try adjusting your filters or <a href="/campgrounds">clear all filters</a>.
    </div>
  <% } else { %>
    <% for (let campground of campgrounds) { %>
      <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <% if(campground.images.length) { %>
              <img class="img-fluid rounded-start" alt="" src="<%= campground.images[0].url %>" style="height: 100%; object-fit: cover;">
            <% } else { %>
              <img
                class="img-fluid rounded-start"
                alt=""
                src="https://res.cloudinary.com/dzwjyg2ai/image/upload/v1756312011/musafir/e9z56wsbx8tl1hon1vhm.jpg"
                style="height: 100%; object-fit: cover;"
              >
            <% } %>
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= campground.title %></h5>
              <p class="card-text"><%= campground.description %></p>
              <p class="card-text">
                <small class="text-muted"><i class="fas fa-map-marker-alt"></i> <%= campground.location %></small>
              </p>
              <p class="card-text">
                <strong class="text-success">₹<%= campground.price %>/night</strong>
              </p>
              <a class="btn btn-primary" href="/campgrounds/<%= campground._id %>">View Details</a>
            </div>
          </div>
        </div>
      </div>
    <% } %>
  <% } %>

  <!-- Pagination -->
  <% if (pagination.totalPages > 1) { %>
    <nav aria-label="Campgrounds pagination">
      <ul class="pagination justify-content-center">
        <!-- Previous Button -->
        <li class="page-item <%= !pagination.hasPrevPage ? 'disabled' : '' %>">
          <% if (pagination.hasPrevPage) { %>
            <a class="page-link" href="?page=<%= pagination.prevPage %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">
              Previous
            </a>
          <% } else { %>
            <span class="page-link">Previous</span>
          <% } %>
        </li>

        <!-- Page Numbers -->
        <% 
          const startPage = Math.max(1, pagination.page - 2);
          const endPage = Math.min(pagination.totalPages, pagination.page + 2);
        %>
        
        <% if (startPage > 1) { %>
          <li class="page-item">
            <a class="page-link" href="?page=1<%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">1</a>
          </li>
          <% if (startPage > 2) { %>
            <li class="page-item disabled"><span class="page-link">...</span></li>
          <% } %>
        <% } %>

        <% for (let i = startPage; i <= endPage; i++) { %>
          <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
            <a class="page-link" href="?page=<%= i %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">
              <%= i %>
            </a>
          </li>
        <% } %>

        <% if (endPage < pagination.totalPages) { %>
          <% if (endPage < pagination.totalPages - 1) { %>
            <li class="page-item disabled"><span class="page-link">...</span></li>
          <% } %>
          <li class="page-item">
            <a class="page-link" href="?page=<%= pagination.totalPages %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">
              <%= pagination.totalPages %>
            </a>
          </li>
        <% } %>

        <!-- Next Button -->
        <li class="page-item <%= !pagination.hasNextPage ? 'disabled' : '' %>">
          <% if (pagination.hasNextPage) { %>
            <a class="page-link" href="?page=<%= pagination.nextPage %><%= filters.search ? '&search=' + filters.search : '' %><%= filters.minPrice ? '&minPrice=' + filters.minPrice : '' %><%= filters.maxPrice ? '&maxPrice=' + filters.maxPrice : '' %><%= filters.sort ? '&sort=' + filters.sort : '' %>">
              Next
            </a>
          <% } else { %>
            <span class="page-link">Next</span>
          <% } %>
        </li>
      </ul>
    </nav>
  <% } %>
</div>

