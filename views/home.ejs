<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Campground Adventures - Musafir</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600;700&display=swap"
      rel="stylesheet"
    />

    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
      integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/stylesheets/app.css" />
  </head>

  <body>
    <%- include('partials/navbar') %>

    <div class="home-wrapper">
      <!-- Hero Section with Background Image -->
      <section class="hero-section">
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

        <a href="/campgrounds" class="book-btn">Explore Campgrounds</a>
      </section>

      <!-- Available Campgrounds Section -->
      <section class="campgrounds-section">
        <h2 class="section-title">Available Campgrounds</h2>

        <div class="campground-cards">
          <% if (featuredCampgrounds && featuredCampgrounds.length > 0) { %> <%
          featuredCampgrounds.forEach(campground => { %>
          <a
            href="/campgrounds/<%= campground._id %>"
            class="campground-preview-card"
            style="text-decoration: none; color: inherit"
          >
            <% if (campground.images && campground.images.length > 0) { %>
            <img
              src="<%= campground.images[0].url %>"
              alt="<%= campground.title %>"
              class="preview-image"
            />
            <% } else { %>
            <img
              src="/images/bgImg.png"
              alt="<%= campground.title %>"
              class="preview-image"
            />
            <% } %>
            <div class="preview-content">
              <h3 class="preview-title"><%= campground.title %></h3>
              <p class="preview-subtitle"><%= campground.location %></p>
            </div>
          </a>
          <% }); %> <% } else { %>
          <!-- Fallback cards if no campgrounds found -->
          <div class="campground-preview-card">
            <img
              src="/images/bgImg.png"
              alt="Mountain View"
              class="preview-image"
            />
            <div class="preview-content">
              <h3 class="preview-title">Mountain View</h3>
              <p class="preview-subtitle">Scenic</p>
            </div>
          </div>

          <div class="campground-preview-card">
            <img src="/images/bgImg.png" alt="Lakeside" class="preview-image" />
            <div class="preview-content">
              <h3 class="preview-title">Lakeside</h3>
              <p class="preview-subtitle">Waterfront</p>
            </div>
          </div>

          <div class="campground-preview-card">
            <img
              src="/images/bgImg.png"
              alt="Pine Grove"
              class="preview-image"
            />
            <div class="preview-content">
              <h3 class="preview-title">Pine Grove</h3>
              <p class="preview-subtitle">Wooded</p>
            </div>
          </div>
          <% } %>
        </div>

        <div class="text-center bottom-cta">
          <a href="/campgrounds" class="book-btn">Book Your Stay</a>
        </div>
      </section>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/js/bootstrap.min.js"
      integrity="sha384-oesi62hOLfzrys4LxRF63OJCXdXDipiYWBnvTl9Y9/TRlw5xlKIEHpNyvvDShgf/"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
